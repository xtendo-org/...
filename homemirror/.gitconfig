[push]
	default = simple
[color]
	ui = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset %C(blue)%an%Creset %s %Cgreen(%cr)' --abbrev-commit
	recent = branch -l --sort=-committerdate
[core]
	excludesfile = /home/user/.gitignore
	editor = vim
	pager = delta
[log]
	date = iso8601
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[delta]
	light = true
	line-numbers = true
	navigate = true
	pager = less -R
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[branch]
	sort = committerdate
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
